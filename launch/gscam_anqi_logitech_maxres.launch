<launch>
  <arg name="cam_name" value="camera" />

  <env name="GSCAM_CONFIG" value="v4l2src device=/dev/video0 ! video/x-raw-yuv,framerate=15/1,width=1920,height=1080 ! ffmpegcolorspace " />
  <node pkg="gscam" type="gscam" name="$(arg cam_name)" output="screen">
    <param name="frame_id" value="/camera_frame" />
    <param name="camera_name" value="$(arg cam_name)" />
    <param name="camera_info_url" value="file:///$(find ftag2test)/camera_info/logitech_c920_1920_1080.yaml" />
    <remap from="camera/image_raw" to="$(arg cam_name)1/image_raw" />
  </node>
</launch>
